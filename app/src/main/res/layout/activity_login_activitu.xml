<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/root"
    tools:context="com.tx.zq.tongxue.activity.LoginActivity">

    <ImageView
        android:id="@+id/head"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/tx_lesson_icon_01" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <com.tx.zq.tongxue.view.ClearEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:text="你好"
            android:drawableLeft="@mipmap/tx_login_username"
            android:drawablePadding="15dp"
            android:hint="学号/手机号"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/text_login" />
        <com.tx.zq.tongxue.view.ClearEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="123456"
            android:drawableLeft="@mipmap/tx_login_password"
            android:drawablePadding="15dp"
            android:hint="请输入6-18位密码"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/text_login" />
        <Button
            android:id="@+id/go"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bac_btn"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="注册帐号"
        android:textColor="@color/hometext"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:text="QQ快捷登录"
        android:textColor="@color/hometext"
        android:textSize="15dp" />

</RelativeLayout>
